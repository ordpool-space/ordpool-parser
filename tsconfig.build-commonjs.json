{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "outDir": "dist-commonjs",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.helper.ts",
    "node_modules"
  ]
}
